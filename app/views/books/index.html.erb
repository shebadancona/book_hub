
<h1>Listing books</h1>
 
<table>
  <tr>
    <th>Title</th>
    <th>Description</th>
    <th>Isbn</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
 
  <% @books.each do |book| %>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.description %></td>
      <td><%= book.isbn %></td>
      <td><%= link_to 'Show', book_path(book) %></td>
      <td><%= link_to 'Delete', book_path(book), method: :delete %></td>
      <td><%= link_to 'Edit', edit_book_path(book) %></td>
    </tr>
  <% end %>
</table>

<%= link_to "create a new book", new_book_path %>
